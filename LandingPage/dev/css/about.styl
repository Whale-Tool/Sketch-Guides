@lost gutter 0px;
@require '/require/_var.styl'


#about
	opacity 0
	animation-fill-mode both
	#about-header
		position relative
		lost-center 100%
		lost-utility clearfix
		#scrollnext
			position absolute
			display block
			width 50px
			height 50px
			bottom 10px
			left calc( 50% - 25px )
			z-index 4
			.scrollline
				position absolute
				bottom 25px
				left 25px
				transition bottom 0.21s ease-in-out 0s
				&::after, &::before
					content ''
					transform rotate(-45deg)
					position absolute
					bottom 3px
					left -1px
					background black
					width 10px
					height 1px
				&::before
					transform rotate(45deg)
					left -8px
			
			&:hover
				.scrollline
					bottom 20px
					animation none
		.header-content
			position absolute
			width 600px
			height auto
			display block
			left 23%
			top 50%
			transform translateY(-50%)
			z-index 9
			.about-title
				position relative
				display block
				text-align left
				line-height 9rem
				font-weight 100
				font-size 7.5rem
				opacity 0
				transition opacity 0.8s linear 0.6s
				&.aboutTintro
					opacity 1
			.about-describe
				position relative
				display block
				color $darkgrey
				text-align right
				font-style italic
				font-size 1.1rem
				font-weight 200
				opacity 0
				transition opacity 0.8s linear 0.8s
				&::before
					content ''
					position absolute
					display block
					right 800px
					top 16px
					width 60px
					height 1px
					background $grey
				&.aboutDintro
					opacity 1
					&::before
						right 250px
						transition right 1s cubic-bezier(1,0,0,1) 0.6s
						// trasnform translateX(0px)				
		.header-left
			position relative
			lost-column 3/5
			background $whitegrey
			height 100%
			z-index 2
		.header-right
			position relative
			lost-column 2/5
			text-align center
			overflow hidden
			height 100%
			background url(../lib/image/aboutbg.jpg) no-repeat
			background-position center center
			background-size cover
			z-index 2

	#biography
		position relative
		lost-center 75%
		padding 100px 0
		text-align justify
		lost-utility clearfix
		.bio-about
			lost-column 3/5
			padding 20px 0
			position relative
			h2
				position relative
				display block
				font-size 2.5rem
				font-weight 500
				color $darkgrey
			p
				position relative
				display block
				margin-top 30px
				padding-right 10%
				word-break break-all
				word-wrap break-word
				hyphens auto
				font-size 1rem
				line-height 1.9rem
				font-weight 200
				color black
				
			a
				color $black
		.bio-work
			lost-column 2/5
			padding-left 4%
			position relative
			.workbox
				lost-column 1/2
				margin-top 100px
				position relative
				font-weight 200
				font-size 1rem
				color $black
				.work-project
					font-weight 400
					font-size 1.1rem
					i
						font-size 0.8rem
						font-weight 200
						color $grey
				.work-title
					padding 15px 0
					font-size 1rem
				.work-locate
					color $darkgrey
		.bio-bottom
			position relative
			lost-column 1/1
			.bottom-quote
				visibility hidden
				position relative
			.bottom-signature
				position relative
				text-align center
				height 100px
				margin-top 100px
				padding 10px 0
				img
					height 100%
					width auto


