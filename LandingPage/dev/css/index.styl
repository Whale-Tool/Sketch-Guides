	.s2
		position: relative
		lost-center 100%
		text-align center
		margin-bottom 100px
		+below(880px)
			margin-top 60px
			margin-bottom 60px
			img
				max-width 100%
			p
				font-size 1rem
				font-weight 400
				color $grey
		p
			padding 30px
			font-weight 300
			color $darkgrey
		img
			display: block
			margin 0px auto
			padding 30px
			max-width 830px
			height auto
		+below(480px)
			p
				text-align left
				word-break break-all
				word-wrap break-word
	.s3
		position: relative
		lost-center 100%
		background: $darkgrey
		padding 100px 0 60px 0
		overflow-x hidden
		+below(1080px)
			padding 30px 0 30px 0
			.left-content
				lost-column 1/1
				padding 30px
				.box
					padding-top 0
					text-align center
			.right-img
				lost-column 1/1
				max-height auto
				.screen
					height auto
					width 100%
					transform translateX(0px)
				.controltool
					top 0
					right 0
					width 70%
					padding 20px
		+below(880px)
			.left-content
				.box
					p
						color $smoggrey
						font-size 1rem
						font-weight 400
		+below(480px)
			.left-content
				.box
					p
						text-align left
						word-break break-all
						word-wrap break-word
		.left-content
			position: relative
			lost-column 2/5
			padding-left 60px
			.box
				position: relative
				padding-top 45%
				// transform translateY(-50%)
				h2
					color $white
				p
					color $lightgrey
					padding-top 30px
		.right-img
			position: relative
			lost-column 3/5
			max-height 1100px
			text-align right
			.screen
				height 100%
				transform translateX(20px)
				z-index: 1
			.controltool
				position: absolute
				transform translate3d(0,0,0)
				top 10%
				right 30%
				width 500px
				height auto
				z-index 2
	.s4
		position: relative
		lost-center 100%
		background: $white
		padding 100px 0
		text-align center
		+below(880px)
			padding 60px 20px
			.content
				p
					padding 10px
					font-size 1rem
					margin-top 20px
					font-weight 400
					color $grey
			.download
				a
					padding 5px 15px
					margin 20px 0 5px 0
					font-size 1rem
					font-weight 300
		+below(480px)
			.content
				p
					text-align left
					word-break break-all
					word-wrap break-word
			.donate
				margin-top 100px
				&::before
					height 50px
					bottom 110px
		.content
			p
				padding 30px
				color $darkgrey
				a
					color rgba(50,90,200,1)
					&:hover
						color $lightred
		.download
			a
				display: inline-block
				padding 15px 40px
				margin 25px 0 15px 0
				background: transparent
				border-radius 50px
				border 1px solid $lightred
				color $lightred
				font-size 1.4rem
				font-weight 200
				line-height 30px
				transition background 0.17s ease-in-out 0s, color 0.17s ease-in-out 0s
				&:hover
					background: $red
					color $white
		.donate
			position: relative
			margin-top 250px
			&::before
				content ''
				position: absolute
				bottom 160px
				// left 100px
				width 1px
				height 100px
				background: $smoggrey
			h6 
				display: block
				padding 30px 0
				font-size 1rem
				font-weight 200
				color $black
		



