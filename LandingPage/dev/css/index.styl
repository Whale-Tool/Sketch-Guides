
@lost gutter 0px;
@require '/require/_var.styl'

p
	display: block
	font-size 1.2rem
	font-weight 300
	line-height 30px
	max-width 700px
	margin 0px auto
	+below(880px)
		max-width 600px
		font-size 1rem
	+below(480px)
		max-width 100%
		width 100%
		line-height 1.5rem

#main
	animation-fill-mode both
	opacity 0
	header
		position relative
		width 100%
		display block
		padding 100px 0 120px 0
		lost-utility clearfix
		text-align center
		background: $lightgrey
		+below(880px)
			padding 30px 0
			.imgBox
				lost-center 100%
				margin-top 30px
				padding 15px
			.contentBox
				lost-center 100%
				.brand-title
					font-size 2.4rem
					line-height 40px
					padding 20px 0
				.brand-describe
					padding 0px 0 10px 0
					font-size 1rem
					font-weight 400
					color $grey
			.headerDownload
				lost-center 100%
				padding 30px
				a
					padding 10px 30px
					font-size 1rem
					font-weight 300
		+below(480px)
			.imgBox
				padding 0px
				height 70px
				img
					height 100%
					width: auto
			.contentBox
				padding 0 20px
				.brand-title
					font-size 2rem
				.brand-describe
					text-align left
					word-break break-all
					word-wrap break-word
		.imgBox
			position: relative
			display: block
			lost-center 85%
			padding 30px
			img
				height auto
				width: auto
		.contentBox
			position: relative
			lost-center 85%
			.brand-title
				position: relative
				display inline-block
				margin 0px auto
				font-size 4rem
				font-weight 100
				line-height 100px
				&::after
					position: absolute
					display: inline-block
					content ''
					background: url('/lib/image/guideline.svg') no-repeat
					height 30px
					width 30px
					top 20px
					right -40px
			.brand-describe
				position: relative
				padding 30px 30px 0 30px
				color $darkgrey
				font-size 1.1rem
				font-weight 300
		.headerDownload
			position: relative
			lost-center 85%
			padding 60px 0
			a
				display: inline-block
				padding 15px 40px
				background: $lightred
				border-radius 50px
				color $white
				font-size 1.4rem
				font-weight 100
				line-height 30px
				box-shadow 0px 25px 50px 0px alpha($black, 15%)
				transition box-shadow 0.23s ease-in-out 0s, background 0.23s ease-in-out 0s
				&:hover
					background: darken($lightred, 10%)
					box-shadow 0px 50px 100px alpha($black, 15%)
			h6
				padding 20px 0
				color $darkgrey
				font-size 0.8rem
	
	.s1
		position: relative
		lost-center 100%
		text-align center
		+below(1080px)
			.shadowBox
				max-width 880px
		+below(880px)
			.shadowBox
				display none
				visibility hidden
		.shadowBox
			position: relative
			max-width 1080px
			height auto
			margin 0px auto
			transform translate3d(0,0,0)
			.tutorial
				position: relative
				display: block
				width 100%
				background: $white
				height auto
				transform translateY(-100px)
				box-shadow 0 2px 2px alpha(black, 20%)
				border-radius 4px
				video
					width 100%
					height auto
					
				&::before
					position absolute
					background transparent
					content ""
					bottom 0px
					left 1%
					width 98%
					height 20px
					border-radius 0 0 50% 50%
					box-shadow 0 5px 15px alpha(black, 25%)
					z-index -1
					transition-duration 0.5s
