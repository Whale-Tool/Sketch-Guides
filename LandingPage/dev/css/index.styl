
@lost gutter 0px;
@require '/require/_var.styl'


#main
	animation-fill-mode both
	opacity 0
	header
		position relative
		width 100%
		display block
		padding 100px 0 120px 0
		lost-utility clearfix
		text-align center
		background: $lightgrey
		.imgBox
			position: relative
			display: block
			lost-center 85%
			padding 30px
			img
				height auto
				width: auto
		.contentBox
			position: relative
			lost-center 85%
			.brand-title
				font-size 4rem
				font-weight 100
				line-height 100px
			.brand-describe
				padding 30px 30px 0 30px
				color $grey
				font-size 1.2rem
				font-weight 200
		.headerDownload
			position: relative
			lost-center 85%
			padding 60px 0
			a
				display: inline-block
				padding 15px 40px
				background: $lightred
				border-radius 50px
				color $white
				font-size 1.4rem
				font-weight 100
				line-height 30px
				box-shadow 0px 5px 20px 0px $smoggrey
				transition box-shadow 0.17s ease-in-out 0s, background 0.17s ease-in-out 0s
				&:hover
					background: darken($lightred, 10%)
					box-shadow 0px 10px 25px 2px $smoggrey
			h6
				padding 20px 0
				color $darkgrey
				font-size 0.8
	
	.s1
		position: relative
		lost-center 100%
		text-align center
		.tutorial
			position: relative
			display: block
			margin 0px auto
			max-width 1080px
			height 600px
			transform translateY(-100px)
			box-shadow 0px 0px 10px $lightgrey, 0px 6px 40px $smoggrey
			border-radius 4px
			overflow hidden
			.videoimage
				position: absolute
				width 100%
				height 100%
				top 0
				left 0
				background $lightred
				background: url('/lib/video/box.png') no-repeat
				background-size cover
				background-position: bottom center
				transition opacity 0.17s ease-in-out 0s
				p
					position: relative
					display: block
					top 50%
					transform translateY(-50%)
					color $white
					font-size 1rem
					font-weight 200
					
	.s2
		position: relative
		lost-center 100%
		text-align center
		margin-bottom 100px
		p
			padding 30px
			color $grey
		img
			display: block
			margin 0px auto
			padding 30px
			max-width 830px
			height auto
	.s3
		position: relative
		lost-center 100%
		background: $darkgrey
		padding 100px 0 60px 0
		overflow-x hidden
		.left-content
			position: relative
			lost-column 2/5
			padding-left 60px
			.box
				position: relative
				padding-top 45%
				// transform translateY(-50%)
				h2
					color $white
				p
					color $lightgrey
					padding-top 30px
		.right-img
			position: relative
			lost-column 3/5
			max-height 1100px
			text-align right
			.screen
				height 100%
				transform translateX(20px)
				z-index: 1
			.controltool
				position: absolute
				top 10%
				right 30%
				width 500px
				height auto
				z-index 2
	.s4
		position: relative
		lost-center 100%
		background: $white
		padding 100px 0
		text-align center
		.content
			p
				padding 30px
				color $grey
				a
					color rgba(50,90,200,1)
					&:hover
						color $lightred
		.download
			a
				display: inline-block
				padding 15px 40px
				margin 30px 0 20px 0
				background: transparent
				border-radius 50px
				border 1px solid $lightred
				color $lightred
				font-size 1.4rem
				font-weight 100
				line-height 30px
				transition background 0.17s ease-in-out 0s, color 0.17s ease-in-out 0s
				&:hover
					background: $red
					color $white
		.donate
			position: relative
			margin-top 250px
			&::before
				content ''
				position: absolute
				bottom 160px
				// left 100px
				width 1px
				height 100px
				background: $smoggrey
			h6 
				display: block
				padding 30px 0
				font-size 1rem
				font-weight 200
				color $darkgrey
		
				
		
		







		