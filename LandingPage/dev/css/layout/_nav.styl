nav
	position fixed
	left 0
	top 0
	width 100vw
	height 100px
	opacity 0
	transform translateY(0px)
	// font-family core-c, sans-serif
	transition all 0.27s ease-in-out 0s
	animation-delay 0.5s
	overflow hidden
	lost-utility clearfix
	z-index 99
	+below(480px)
		.name
			display none
		.button
			margin-right 10px
			margin-top 0px
			&::before, &::after
				content ''
		&.navScroll
			background alpha($white, 85%)
	
	.name
		position relative
		display block
		float left
		width auto
		height 100%
		margin-left 40px
		.homelink
			position relative
			display inline-block
			padding 30px 0px 0px
			line-height 2rem
			font-weight 200
			font-size 1.3rem
			text-decoration none
			color $darkgrey
			transition color 0.13s ease-in-out 0s
			strong
				font-weight 500
			&::after
				content ''
				position: absolute
				bottom 1px
				left 0
				width 100%
				height 1px
				background: $lightgrey
				opacity 0
				transform scaleX(0)
				transform-origin right
				transition transform 0.74s cubic-bezier(.19, 1, .22, 1) 0s, opacity 0.26s ease-in-out 0s, background-color 0.19s ease-in-out 0s
			&:hover
				// color $black
				&:after
					background: $black
					opacity 1
					transform scaleX(1)
					transform-origin left
		.myTitle
			padding 5px 0px 0px
			color $darkgrey
			font-size 1rem
			font-weight 200
			letter-spacing 1px
			transition color 0.27s ease-in-out 0s
			
		.backlink
			position relative
			display inline-block
			margin-left 30px
			top 30px
			line-height 2rem
			font-weight 200
			font-size 1.3rem
			text-decoration none
			color $black
			transition top 0.22s ease-in-out 0s
			&::after
				content ' '
				position: absolute
				bottom 50%
				left -120px
				background $black
				height 1px
				width 100px
				transition left 0.24s ease-in-out 0s
			&:hover
				&:after
					left -130px
	








