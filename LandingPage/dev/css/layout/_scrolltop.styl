#scrolltop
	position fixed
	display block
	width 40px
	height 40px
	right 5vw
	transition transform 0.3s ease-in-out 0.1s, opacity 0.3s linear 0s, bottom 0.3s ease-in-out 0s
	z-index 99
	cursor pointer
	opacity 0
	bottom -50px
	+below(880px)
		display none
		visibility hidden
	.scrolllineup
		position absolute
		width 100%
		height 100%
		border-radius 50%
		background $whitegrey
		transition background 0.24s ease-in-out 0s
		transform translate3d(0,0,0)
		&::after, &::before
			content ''
			transform rotate(45deg)
			position absolute
			top 19px
			left 19px
			width 10px
			height 1px
			background $black
		&::before
			transform rotate(-45deg)
			left 12px
	&:hover
		.scrolllineup
			background: $smoggrey
	+below(880px)
		display none
		visibility hidden

#scrolldown
	position absolute
	display block
	bottom 30px
	width 40px
	height 40px
	left calc( 50% - 20px )
	background $white
	transition background 0.22s ease-in-out 0s
	box-shadow 0px 0px 10px $smoggrey
	border-radius 50%
	z-index 2
	+below(880px)
		display none
		visibility hidden
	.scrollline
		position absolute
		bottom 15px
		left 20px
		width 1px
		background transparent
		transition bottom 0.21s ease-in-out 0s
		&::after, &::before
			content ''
			transform rotate(-45deg)
			position absolute
			bottom 3px
			left -1px
			background black
			width 10px
			height 1px
		&::before
			transform rotate(45deg)
			left -8px
	&:hover
		background: $smoggrey
	+below(880px)
		display none
		visibility hidden


