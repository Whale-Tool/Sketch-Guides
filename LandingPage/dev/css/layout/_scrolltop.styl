#scrolltop
	position fixed
	display block
	width 40px
	height 40px
	bottom -50px
	right 5vw
	transition transform 0.3s ease-in-out 0.1s, opacity 0.3s linear 0s, bottom 0.3s ease-in-out 0s
	z-index 99
	cursor pointer
	// overflow hidden
	+below(880px)
		display none
		visibility hidden
	&:hover
		.scrolllineup
			background: $smoggrey
			&::after, &::before
				background: $black
	.scrolllineup
		position absolute
		width 100%
		height 100%
		border-radius 50%
		background $lightgrey
		transition background 0.24s ease-in-out 0s
		transform translate3d(0,0,0)
		&::after, &::before
			content ''
			transform rotate(45deg)
			position absolute
			top 19px
			left 19px
			background black
			width 10px
			height 1px
			background $darkgrey
		&::before
			transform rotate(-45deg)
			left 12px

